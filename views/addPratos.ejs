<%- include('layout/header') %>

<section>
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem; background-color: antiquewhite;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img
                src="https://img.freepik.com/free-photo/ingredients-making-guakamole_1220-7095.jpg?w=1060&t=st=1694301123~exp=1694301723~hmac=388b002690d625fd2bc119d2dfd072f7b9e855bab7b40b79560642e2af2c10db"
                alt="login form"
                width="100%"
                height="100%"
                style="border-radius: 1rem 0 0 1rem; object-fit: cover; object-position: top left;"
              />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                <form
                  action="/add"
                  method="post"
                  id="add-form"
                  enctype="multipart/form-data"
                >
                  <div class="d-flex align-items-center mb-3 pb-1">
                    <span class="h1 fw-bold mb-0">Cadastrar novo prato</span>
                  </div>

                  <div class="form-outline mb-4">
                    <input
                      name="nome"
                      type="text"
                      id="form2Example17"
                      class="form-control form-control-lg"
                    />
                    <label class="form-label">Nome</label>
                  </div>

                  <div class="row">
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <input
                          name="preco"
                          type="number"
                          id="form3Example1"
                          class="form-control"
                        />
                        <label class="form-label">Preço</label>
                      </div>
                    </div>
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <input
                          name="tempo"
                          type="time"
                          id="form3Example2"
                          class="form-control"
                        />
                        <label class="form-label">Tempo de espera</label>
                      </div>
                    </div>
                  </div>

                  <div class="form-outline mb-4">
                    <textarea
                      name="descricao"
                      id="form2Example27"
                      class="form-control form-control-lg"
                    ></textarea>
                    <label class="form-label">Descrição</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input
                      type="file"
                      class="form-control form-control-lg"
                      name="image"
                    />
                    <label class="form-label" required>Imagem</label>
                  </div>

                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg btn-block" type="submit">
                      Criar Prato
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('layout/footer') %>
