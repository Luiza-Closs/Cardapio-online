<%- include('layout/header') %>

<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if (message) { %>
      <div
        class="alert alert-desmissible fade show alert-<%= message.type %>"
        role="alert"
      >
        <button
          class="btn-close"
          type="button"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
        <strong><%= message.message %></strong>
      </div>
      <% } %>
      <div class="table-responsive">
        <% if (users != '') { %>
        <table class="table table-striped text-center">
          <thead>
            <tr class="table-dark">
              <th>ID</th>
              <th>Nome</th>
              <th>Descrição</th>
              <th>Telefone</th>
              <th>Data chamada</th>
              <th>Data conclusão</th>
              <th>Imagem</th>
              <th>Status</th>
              <th>Deletar ou Editar</th>
            </tr>
          </thead>

          <tbody>
            <% users.forEach((row, index) => { %>
            <tr class="align-middle">
              <td><%= index %></td>
              <td><%= row.nome %></td>
              <td><%= row.descricao %></td>
              <td><%= row.telefone %></td>
              <td><%= row.dataIn %></td>
              <td><%= row.dataOut %></td>
              <td>
                <img src="<%= row.image %>" width="100" class="img-thumbnail" />
              </td>
              <td><%= row.status %></td>
              <td>
                <a href="/delete/<%= row._id %>" class="text-danger"
                  ><i class="fas fa-trash fa-lg mx-4"></i
                ></a>
                <a href="/edit/<%= row._id %>" class="text-dark"
                  ><i class="fas fa-edit fa-lg mx-4"></i
                ></a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } else { %>
        <h1 class="text-center text-secondary mt-5">
          Nenhum serviço encontrado no banco!
        </h1>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('layout/footer') %>
